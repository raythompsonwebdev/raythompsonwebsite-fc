{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "rootDir": "./src",
    "strict": true,
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src"], // which files to compile
  "exclude": ["node_modules"] // which files to skip
}
