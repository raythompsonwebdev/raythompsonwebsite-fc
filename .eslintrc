{
  "env": {
      "browser": true,      
      "es2020": true,
      "node":true,
      "es6":true
  },
  "extends": ["airbnb", "eslint:recommended", "plugin:import/recommended", "plugin:prettier/recommended", "plugin:jsx-a11y/recommended"],
  "plugins": ["prettier" , "import", "jsx-a11y"],
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "ecmaFeatures": {
        "globalReturn": false
      },
      "babelOptions": {
        "configFile": "./babel.config.json"
      },
      "requireConfigFile": false
      
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
	},
  "parser": "@babel/eslint-parser",
  
  "rules": {    
    "semi": "error",
    "strict" : ["error","global"],
    "func-style":["error", "expression"],
    "no-new-func":"error",
    "no-param-reassign": "error",    
    "prefer-arrow-callback": "warn",
    "arrow-parens": ["error", "always"],
    "arrow-body-style": ["error", "as-needed"],
    "new-cap": "error",
    "no-invalid-this": "error",
    "prefer-const":"error",
    "prefer-destructuring":["error",{"array":true, "object":true},{"enforceForRenamedProperties":true}],     
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "func-names": "warn",
    "no-process-exit": "warn",
    "object-shorthand": "warn",
    "class-methods-use-this": "error",    
    "no-var": "error",    
    "prefer-rest-params": "warn",    
    "no-eval":"error",
    "no-implied-eval":"error",
    "eqeqeq":"error",
    "no-with":"error",
    "no-plusplus":"error"
  }
}
